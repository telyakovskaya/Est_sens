from typing import Tuple
import pandas as pd
import numpy as np

def excl_read(excl_fname: str, **kwargs):
    return pd.read_excel(excl_fname, **kwargs)

def load_illums(excl_fname: str = 'illuminances_std.xlsx', wavelength_name=) -> Tuple[np.ndarray, np.ndarray]:
    E_df = excl_read(excl_fname, sheet_name='Worksheet')
    E_df[wavelength_name]
    return E_df

def load_refl(excl_fname: str = 'babelcolor.xlsx'):
    R_df = excl_read(excl_fname, sheet_name='Worksheet')
    return R_df

def load_sens(excl_fname: str = 'canon600d.xlsx'):
    sensitivities_df = excl_read(excl_fname, sheet_name='Worksheet').drop(columns='wavelength')
    return sensitivities_df